<% include ../partials/header %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><i class="fas fa-user-astronaut" style="margin-right: 10px;"></i>Welcome Argonaut!</h1>
            <p>Shared your favorite game with the community and discover new awesome games.</p>
            <p>
                <a class="btn btn-outline-light btn-lg" href="/campgrounds/new">Add Your Favorite Game!<i class="fas fa-gamepad" style="margin-left: 10px;"></i></a>
            </p>
            
        </div>
    </header>
        

    <div class="row" style="display:flex; display-wrap:wrap; padding: 0 4px; text-align: center">
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-lg-4 col-sm-6">
            <div class="thumbnail">
                <img style="width: 85%;height:250px; margin: 1.66%;" class="img-rounded" src="<%= campground.image %>">
                <div class="caption">
                    <h4><span class="games"><%= campground.name %></span></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%=campground._id%>" class="btn btn-outline-warning">More Info</a>
                </p>
            </div>
      </div>
      <% });%>
    </div>
</div>

<% include ../partials/footer %>