<% include ../partials/header %>

<div class="container" style="margin-top: 100px">
        <h1 style="text-align: center">Create a new Campground</h1>
    
        <div style="width: 30%; margin: 25px auto; btn-align: center;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="City" name="name">
                </div>  
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Img Url" name="image">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Add a description" name="description">
                </div>
                <div class="form-group">
                    <button class="btn btn-warning btn-large btn-block">Submit!</button>
                </div>
            </form>
            <button><a href="/campgrounds">Click here to go back to the Cities</a></button>
        </div>
</div>
<% include ../partials/footer %>