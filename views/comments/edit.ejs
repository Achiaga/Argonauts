<% include ../partials/header %>

<div class="container" style="margin-top: 100px">
        <h1 style="text-align: center">Edit Comment </h1>
    
        <div style="width: 30%; margin: 25px auto; btn-align: center;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" value="<%=comment.text%>" name="comment[text]">
                </div>  
                <div class="form-group">
                    <button class="btn btn-warning btn-large btn-block">Submit!</button>
                </div>
            </form>
            <button><a href="/campgrounds">Click here to go back to the Cities</a></button>
        </div>
</div>
<% include ../partials/footer %>